<%# This receives the turbo stream %>
<%= turbo_stream_from "rooms" %>

<main class="container">
    <div class="header">
          <h1>Rooms</h1>
          <%= link_to "New Room",
                new_room_path,
                data: { turbo_frame: "new_room"},
                class: "btn btn--primary" %>
    </div>

    <%= turbo_frame_tag "new_room" do %>
    <% end %>

    <%# show the partial _room.html.erb %>
    <%= turbo_frame_tag "rooms" do %>
        <%= render @rooms %>
    <% end %>

    <%= paginate @rooms %>
</main>