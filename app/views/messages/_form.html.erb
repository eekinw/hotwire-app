<%= simple_form_for [@room, message], html: { class: "message form" } do |f| %>
  <% if message.errors.any? %>
    <div class="error-message">
      <%= message.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

    <%= f.input :content, label: "New Message", input_html: { autofocus: true } %>
    <div>
        <%= link_to "Cancel", room_path(@room), class: "btn btn--light" %>
        <%= f.submit "Send Message", class: "btn btn--secondary" %>
    </div>
<% end %>