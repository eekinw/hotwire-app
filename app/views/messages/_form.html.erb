<%= simple_form_for [@room, message], html: { class: "message form" } do |f| %>
  <% if message.errors.any? %>
    <div class="error-message">
      <%= message.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

    <%= f.input :content, input_html: { autofocus: true } %>
    <%= f.submit class: "btn btn--secondary" %>
<% end %>